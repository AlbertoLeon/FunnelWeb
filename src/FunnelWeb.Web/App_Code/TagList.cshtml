@inherits FunnelWeb.Web.App_Code.HelperPage
@using System.Web.Mvc
@using System.Web.Mvc.Html
@using FunnelWeb.Web.Application.Extensions

@helper Render(IEnumerable<FunnelWeb.Model.Tag> tags)
{
  <span class='tags'>
    @foreach (var tag in tags)
    {
      <a class='tag @Html.CssKeywordsFor(tag)' href='/tagged/@tag.Name' title='Posts tagged @tag.Name'>@tag.Name</a>
    }
  </span>
}